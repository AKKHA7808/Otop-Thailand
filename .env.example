DJANGO_SECRET_KEY=changeme
DJANGO_DEBUG=1
ALLOWED_HOSTS=127.0.0.1,localhost

# Local SQLite by default; set DATABASE_URL for Postgres/Supabase
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# OTOP data
OTOP_JSON_PATH=
OTOP_JSON_URL=https://raw.githubusercontent.com/AKKHA7808/Otop-Thailand/main/otop.json

# Maps
MAP_PROVIDER=leaflet
GOOGLE_MAPS_API_KEY=

# Serverless helpers (Vercel)
AUTO_MIGRATE=1
AUTO_SEED=1
# ตัวอย่างไฟล์ environment variables สำหรับโปรเจกต์
# คัดลอกไฟล์นี้เป็น `.env` และเติมค่าจริง (ห้าม commit .env ที่มีความลับ)

DJANGO_SECRET_KEY=changeme
# DATABASE_URL ตัวอย่างสำหรับ SQLite (local) หรือ Supabase/Postgres
# SQLite example: sqlite:///db.sqlite3
# Supabase/Postgres example (recommended with SSL):
# postgres://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require
DATABASE_URL=sqlite:///db.sqlite3

OTOP_JSON_PATH=D:\\Django\\otop\\otop.json
GOOGLE_MAPS_API_KEY=
ALLOWED_HOSTS=127.0.0.1,.vercel.app
MAP_PROVIDER=leaflet

# Production security flags (recommended for Vercel)
DJANGO_DEBUG=0
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=3600
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0

# Supabase optional variables (only if you use Supabase APIs/storage/auth)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
