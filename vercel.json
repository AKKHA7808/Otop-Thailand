{
  "version": 2,
  "env": {
    "AUTO_MIGRATE": "1",
    "AUTO_SEED": "1",
    "DJANGO_DEBUG": "0",
    "ALLOWED_HOSTS": "newotopthailandapp.vercel.app,.vercel.app",
    "OTOP_JSON_PATH": "",
  "OTOP_JSON_URL": "https://raw.githubusercontent.com/AKKHA7808/Otop-Thailand/main/otop.json",
    "DATABASE_URL": "postgres://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require",
    "MAP_PROVIDER": "leaflet",
    "GOOGLE_MAPS_API_KEY": ""
  },
  "builds": [
    { "src": "api/wsgi.py", "use": "@vercel/python" }
  ],
  "buildCommand": "python -m pip install -r requirements.txt && python manage.py migrate --noinput && python manage.py collectstatic --noinput",
  "outputDirectory": "staticfiles",
  "routes": [
    { "src": "/static/(.*)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "api/wsgi.py" }
  ]
}
